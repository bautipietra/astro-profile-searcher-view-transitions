---
import Card from '../components/Card.astro';
import data from '../db/db.json';
import type { IProfile } from '../interfaces/Profile.ts';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Profile Searcher'>
	<main
		class='m-auto p-4 max-w-3xl container text-base leading-4 grid gap-16 my-16 text-center'>
		<a
			href='/'
			class={`text-6xl font-bold`}
			style=`view-transition-name: title`>
			<h1>
				<span
					class='text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-cyan-600'>
					Profile
				</span> searcher
			</h1>
		</a>
		<div class='grid sm:grid-cols-2 md:grid-cols-3 gap-4'>
			{
				(data as unknown as IProfile[]).map((e: IProfile) => (
					<Card
						name={e.name.first + ' ' + e.name.last}
						image={e.picture.large}
						followers={e.location.street.number}
						id={e.login.uuid}
					/>
				))
			}
		</div>
	</main>
</Layout>

